<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.simon.mybilibili.activity.HomeActivity"
    tools:showIn="@layout/app_bar_home">

    <LinearLayout
        android:id="@+id/home_ll_guide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/home_btn_guide_tvontime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/themepink"
            android:text="直播"
            android:textColor="@color/titleTextColour"/>

        <Button
            android:id="@+id/home_btn_guide_recommend"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/themepink"
            android:text="推荐"
            android:textColor="@color/titleTextColour"/>

        <Button
            android:id="@+id/home_btn_guide_ca"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/themepink"
            android:text="追番"
            android:textColor="@color/titleTextColour"/>

        <Button
            android:id="@+id/home_btn_guide_partition"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/themepink"
            android:text="分区"
            android:textColor="@color/titleTextColour"/>

        <Button
            android:id="@+id/home_btn_guide_dynamic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/themepink"
            android:text="动态"
            android:textColor="@color/titleTextColour"/>

        <Button
            android:id="@+id/home_btn_guide_discovery"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/themepink"
            android:text="发现"
            android:textColor="@color/titleTextColour"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:id="@+id/home_fl_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>
    </ScrollView>
</LinearLayout>
